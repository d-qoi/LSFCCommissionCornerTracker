{
  "compilerOptions": {
    // General
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    // Modules
    "module": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",

    // Type Checking & Safety
    "skipLibCheck": true,
    "strict": true,

    // Paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
